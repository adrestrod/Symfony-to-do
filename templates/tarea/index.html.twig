{% extends 'base.html.twig' %}

{% block title %}Índice de tareas{% endblock %}

{% block body %}
    <h1>Índice de tareas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarea in tareas %}
            <tr>
                <td>{{ tarea.id }}</td>
                <td>{{ tarea.descripcion }}</td>
                <td>
                    <a href="{{ path('tarea_show', {'id': tarea.id}) }}">Detalle</a>
                    <a href="{{ path('tarea_edit', {'id': tarea.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No se han encontrado tareas</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tarea_new') }}">Crear nuevo</a>
{% endblock %}
